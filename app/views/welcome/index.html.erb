<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="text-center">
        <h1>Welcome to VakilSearch Hangout App!</h1>
        <p class="lead">
          This is a social hangout app designed for employees to connect, share updates,
          and engage with each other. <%= user_signed_in? ? "Start exploring!" : "Sign up or sign in to get started!" %>
        </p>
        <% if user_signed_in? %>
          <h3>Hi user <%= current_user.name %></h3>

          <%= form_with(model: Post.new, url: posts_path, class: "post-form", multipart: true) do |form| %>
            <div class="form-group">
              <%= form.text_area :content, class: "form-control", placeholder: "Write your post..." %>
            </div>
            <div class="form-group">
              <%= form.file_field :image, accept: "image/*" %>
            </div>
            <%= form.submit "Post", class: "btn btn-primary" %>
          <% end %>
          <%= render "posts/index" %>
        <% else %>
          <div class="buttons">
            <p>
              <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-lg" %>
            </p>
            <p>
              <%= link_to "Sign in", new_user_session_path, class: "btn btn-outline-primary btn-lg" %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
